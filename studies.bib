  Isbn = {1097-4164 (Electronic) 1097-2765 (Linking)},
  Issn = {10974164},
  Pmid = {26590716},
  Keywords = {Adipogenesis,Bivalent chromatin domains,DNA methylation,Epigenome,Gene-body methylation,H3K27me3,H3K4me3,H3K9me3,Histone methylation,Lineage commitment,RNA polymerase II}
}


@Article{cristancho_repressor_2011,
  Author = {Cristancho, A. G. and Schupp, M. and Lefterova, M. I. and Cao, S. and Cohen, D. M. and Chen, C. S. and Steger, D. J. and Lazar, M. A.},
