}


@Article{steger_propagation_2010,
  Author = {Steger, David J. and Grant, Gregory R. and Schupp, Michael and Tomaru, Takuya and Lefterova, Martina I. and Schug, Jonathan and Manduchi, Elisabetta and Stoeckert, Christian J. and Lazar, Mitchell A.},
  Journal = {Genes and Development},
